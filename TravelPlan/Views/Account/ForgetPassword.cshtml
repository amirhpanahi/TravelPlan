@model TravelPlan.Models.Dto.Main.Account.ForgetPasswordDto
@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<!--begin::Head-->
<head>
	<base href="../../../" />
	@await Component.InvokeAsync("GeneralSettings",new{SecendPart="فراموشی رمزعبور",NewsId=@ViewData["NewsId"]})
	<meta charset="utf-8" />
	<!--begin::Fonts(mandatory for all pages)-->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />
	<!--end::Fonts-->
	<!--begin::Global Stylesheets Bundle(mandatory for all pages)-->
	<link href="assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
	<link href="assets/css/style.bundle.rtl.css" rel="stylesheet" type="text/css" />
	<link href="~/css/Main/Account/ForgetPassword.css" rel="stylesheet" type="text/css" />
	<!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="app-blank bgi-size-cover bgi-attachment-fixed bgi-position-center bgi-no-repeat">
	<!--begin::Theme mode setup on page load-->
	<script>var defaultThemeMode = "light"; var themeMode; if (document.documentElement) { if (document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if (localStorage.getItem("data-bs-theme") !== null) { themeMode = localStorage.getItem("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>
	<!--end::Theme mode setup on page load-->
	<!--begin::Root-->
	<div class="d-flex flex-column flex-root" id="kt_app_root">
		<!--begin::Page bg image-->
		<style>
			body {
				background-image: url('assets/media/misc/a4.png');
			}

			[data-bs-theme="dark"] body {
				background-image: url('assets/media/auth/bg7-dark.jpg');
			}</style>
		<!--end::Page bg image-->
		<!--begin::Authentication - کلمه عبور reset -->
		<div class="d-flex flex-column flex-column-fluid flex-lg-row">

			<!--begin::Body-->
			<div class="d-flex flex-column-fluid justify-content-center p-12 p-lg-20">
				<!--begin::Card-->
				<div class="bg-body d-flex justify-content-center flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
					<!--begin::Wrapper-->
					<div class="d-flex justify-content-center flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">
						<!--begin::Form-->
						<form action="/Account/ForgetPassword" method="post" class="form w-100" id="kt_password_reset_form" onsubmit="return validateFormRegister()">
							<!--begin::Heading-->
							<div class="text-center mb-10">
								<!--begin::Title-->
								<h1 class="text-dark fw-bolder mb-3">فراموشی رمز عبور</h1>
								<!--end::Title-->
								<!--begin::Link-->
								<div class="text-gray-500 fw-semibold fs-6">.ایمیل تان را وارد کنید تا پسوردتان ریست شود</div>
								<span class="text-danger" id="Error-Register-Message"></span>
								@if (ViewBag.SendEmailFaile != null)
								{
									<div class="alert alert-danger mt-4">
										@ViewBag.SendEmailFaile
									</div>
								}
								@if (ViewBag.SendEmailSucces != null)
								{
									<div class="alert alert-success mt-4">
										@ViewBag.SendEmailSucces
									</div>
								}
								<!--end::Link-->
							</div>
							<div asp-validation-summary="ModelOnly" class="text-danger ErrorModelOnly"></div>
							<!--begin::Heading-->
							<!--begin::Input group=-->
							<div class="fv-row mb-8" style="direction:rtl">
								<!--begin::Email-->
								<label asp-for="Email" class="pb-1 SizeLable">ایمیل </label>
								<input asp-for="Email" type="email" placeholder="Forxampel@gmail.com" autocomplete="off" class="form-control bg-transparent" />
								<span asp-validation-for="Email" class="text-danger"></span>
								<!--end::Email-->
							</div>
							<!--begin::Actions-->
							<div class="d-flex flex-wrap justify-content-center pb-lg-0">
								<button type="submit" class="btn btn-primary me-4">
									ثبت
								</button>
								<a href="/" class="btn btn-light">بی خیال</a>
							</div>
							<!--end::Actions-->
						</form>
						<!--end::Form-->
					</div>
					<!--end::Wrapper-->
				</div>
				<!--end::Card-->
			</div>
			<!--end::Body-->
		</div>
		<!--end::Authentication - کلمه عبور reset-->
	</div>
	<!--end::Root-->
	<!--begin::Javascript-->
	<script>var hostUrl = "assets/";</script>
	<!--begin::Global Javascript Bundle(mandatory for all pages)-->
	<script src="assets/plugins/global/plugins.bundle.js"></script>
	<script src="assets/js/scripts.bundle.js"></script>
	<!--end::Global Javascript Bundle-->
	<!--begin::Custom Javascript(used for this page only)-->
	<script src="assets/js/custom/authentication/reset-password/reset-password.js"></script>
	<!--end::Custom Javascript-->
	@Html.Partial("_ValidationScriptsPartial")
	<script>
		function validateFormRegister() {
			// اعتبارسنجی خالی بودن هر یک از فیلدها
			var inputs = document.getElementById("kt_password_reset_form").getElementsByTagName("input");
			for (var i = 0; i < inputs.length; i++) {
				if (inputs[i].type !== "submit" && inputs[i].type !== "hidden" && inputs[i].value.trim() === "") {

					var errorMessageSpan = document.getElementById("Error-Register-Message");
					errorMessageSpan.innerHTML = "لطفاً تمام فیلدها را پر کنید";

					// افزودن کلاس با رنگ قرمز به span
					errorMessageSpan.classList.add("text-danger");

					return false;
				}
			}
			return true;
		}
	</script>
	<!--end::Javascript-->
</body>
<!--end::Body-->
</html>