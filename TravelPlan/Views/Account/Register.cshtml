@model TravelPlan.Models.Dto.Main.Account.RegisterDto
@{
    Layout = null;
}


<!DOCTYPE html>
<html direction="rtl" dir="rtl" style="direction: rtl">
<!--begin::Head-->
<head>
	<base href="../../../" />
	@await Component.InvokeAsync("GeneralSettings",new{SecendPart="ثبت نام کاربر",NewsId=@ViewData["NewsId"]})
	<meta charset="utf-8" />
	<!--begin::Fonts(mوatory for all pages)-->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />
	<!--end::Fonts-->
	<!--begin::Global Stylesheets Bundle(mوatory for all pages)-->
	<link href="~/assets/plugins/global/plugins.bundle.rtl.css" rel="stylesheet" type="text/css" />
	<link href="~/assets/css/style.bundle.rtl.css" rel="stylesheet" type="text/css" />
	<link href="~/css/Main/Account/Register.css" rel="stylesheet" type="text/css" />
	<!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="app-blank">
	<!--begin::Theme mode setup on page load-->
	<script>var defaultThemeMode = "light"; var themeMode; if (document.documentElement) { if (document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if (localStorage.getآیتم("data-bs-theme") !== null) { themeMode = localStorage.getآیتم("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>
	<!--end::Theme mode setup on page load-->
	<!--begin::Root-->
	<div class="d-flex flex-column flex-root" id="kt_app_root">
		<!--begin::احراز هویت - ثبت نام -->
		<div class="d-flex flex-column flex-lg-row flex-column-fluid">
			<!--begin::Body-->
			<div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
				<!--begin::Form-->
				<div class="d-flex flex-center flex-column flex-lg-row-fluid">
					<!--begin::Wrapper-->
					<div class="w-lg-500px p-10">
						<!--begin::Form-->
						<form action="/Account/Register" method="post" class="form w-100" id="kt_sign_up_form" onsubmit="return validateFormRegister()">
							<!--begin::Heading-->
							<div class="text-center mb-11">
								<!--begin::Title-->
								<h1 class="text-dark fw-bolder mb-3">ثبت نام</h1>
								<!--end::Title-->
							</div>
							<!--begin::Heading-->
							<!--begin::Separator-->
							<div class="separator separator-content my-14">
								<span class="w-125px text-gray-500 fw-semibold fs-7">با ایمیل</span>
							</div>
							<span class="text-danger" id="Error-Register-Message"></span>
							@if (ViewBag.Message != null)
							{
								<div class="alert alert-danger">
									<text>@ViewBag.Message</text>
								</div>
							}
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<!--end::Separator-->
							<!--begin::Input group=-->
							<div class="fv-row mb-8">
								<!--begin::ایمیل-->
								<label asp-for="FullName" class="pb-1 SizeLable">نام و نام خانوادگی</label>
								<input asp-for="FullName" type="text" placeholder="مثال : امیرحسین پناهی" autocomplete="off" class="form-control bg-transparent" />
								<span asp-validation-for="FullName" class="text-danger"></span>
								
								<!--end::ایمیل-->
							</div>
							<!--begin::Input group=-->
							<div class="fv-row mb-8">
								<!--begin::ایمیل-->
								<label asp-for="Email" class="pb-1 SizeLable">نام کاربری(ایمیل)</label>
								<input asp-for="Email" type="email" placeholder="Forxampel@gmail.com" autocomplete="off" class="form-control bg-transparent" />
								<span asp-validation-for="Email" class="text-danger"></span>
								<!--end::ایمیل-->
							</div>
							<!--end::Input group=-->
							<!--begin::Input group=-->
							<div class="fv-row mb-8">
								<!--begin::شماره همراه-->
								<label asp-for="PhoneNumber" class="pb-1 SizeLable">شماره تلفن</label>
								<input asp-for="PhoneNumber" maxlength="11" type="text" placeholder="مثال : 09xxxxxxxxx" autocomplete="off" class="form-control bg-transparent" onkeypress="validateKeyPress(event)" />
								<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								<!--end::شماره همراه-->
							</div>
							<!--end::Input group=-->
							<!--begin::Input group-->
							<div class="fv-row mb-8" data-kt-password-meter="true">
								<!--begin::Wrapper-->
								<div class="mb-1">
									<!--begin::Input wrapper-->
									<label asp-for="Password" class="pb-1 SizeLable">کلمه عبور</label>
									<div class="position-relative mb-3">
										<input asp-for="Password" class="form-control bg-transparent" type="password" placeholder="" autocomplete="off" />
										<span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
											<i class="ki-duotone ki-eye-slash fs-2"></i>
											<i class="ki-duotone ki-eye fs-2 d-none"></i>
										</span>
										<span asp-validation-for="Password" class="text-danger"></span>
									</div>
									<!--end::Input wrapper-->
									<!--begin::Meter-->
									<div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
									</div>
									<!--end::Meter-->
								</div>
								<!--end::Wrapper-->
								<!--begin::Hint-->
								<div class="text-muted">استفاده از 8 یا بیشتر کاراکتر با ترکیبی از حروف، اعداد و نمادها</div>
								<!--end::Hint-->
							</div>
							<!--end::Input group=-->
							<!--end::Input group=-->
							<div class="fv-row mb-8">
								<!--begin::تکرار رمز عبور-->
								<label asp-for="ConfirmPassword" class="pb-1 SizeLable">تکرار کلمه عبور</label>
								<input asp-for="ConfirmPassword" placeholder="َ" type="password" autocomplete="off" class="form-control bg-transparent" />
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
								<!--end::تکرار رمز عبور-->
							</div>
							<!--end::Input group=-->
							<!--begin::ثبت button-->
							<div class="d-grid mb-10">
								<button type="submit" id="kt_sign_up_submit" class="btn btn-primary">
									<!--begin::Indicator label-->
									<span class="indicator-label">ثبت نام</span>
									<!--end::Indicator label-->
									<!--begin::Indicator progress-->
									<span class="indicator-progress">
										لطفا صبر کنید...
										<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
									</span>
									<!--end::Indicator progress-->
								</button>
							</div>
							<!--end::ثبت button-->
							<!--begin::ثبت نام-->
							<div class="text-gray-500 text-center fw-semibold fs-6">
								از قبل اکانت دارید?
								<a href="/Account/Login" class="link-primary fw-semibold">ورود</a>
							</div>
							<!--end::ثبت نام-->
						</form>
						<!--end::Form-->
					</div>
					<!--end::Wrapper-->
				</div>
				<!--end::Form-->
			</div>
			<!--end::Body-->
			<!--begin::کناری-->
			<div class="d-flex flex-lg-row-fluid w-lg-50 bgi-size-cover bgi-position-center order-1 order-lg-2" style="background-image: url(assets/media/misc/a3.png)">
				<!--begin::Content-->
				<div class="d-flex flex-column flex-center py-7 py-lg-15 px-5 px-md-15 w-100">
					<!--begin::Logo-->
					<a href="#" class="mb-0 mb-lg-12">
						
					</a>
					<!--end::Logo-->
					<!--begin::Image-->
					<img class="d-none d-lg-block mx-auto w-275px w-md-50 w-xl-500px mb-10" src="assets/media/misc/RegisterPage.png" alt="" />
					<!--end::Image-->
					<!--begin::Text-->
					<div class="d-none d-lg-block text-white fs-base text-center">
					</div>
					<!--end::Text-->
				</div>
				<!--end::Content-->
			</div>
			<!--end::کناری-->
		</div>
		<!--end::احراز هویت - ثبت نام-->
	</div>
	<!--end::Root-->
	<!--begin::Javascript-->
	<script>var hostUrl = "assets/";</script>
	<!--begin::Global Javascript Bundle(mوatory for all pages)-->
	<script src="~/assets/plugins/global/plugins.bundle.js"></script>
	<script src="~/assets/js/scripts.bundle.js"></script>
	<!--end::Global Javascript Bundle-->
	<!--begin::سفارشی Javascript(used for this page only)-->
	<script src="~/assets/js/custom/authentication/Register/general.js"></script>
	<!--end::سفارشی Javascript-->
	<!--end::Javascript-->
	@Html.Partial("_ValidationScriptsPartial")
	<script>
		function validateFormRegister() {
			// اعتبارسنجی خالی بودن هر یک از فیلدها
			var inputs = document.getElementById("kt_sign_up_form").getElementsByTagName("input");
			for (var i = 0; i < inputs.length; i++) {
				if (inputs[i].type !== "submit" && inputs[i].type !== "hidden" && inputs[i].value.trim() === "") {

					var errorMessageSpan = document.getElementById("Error-Register-Message");
					errorMessageSpan.innerHTML = "لطفاً تمام فیلدها را پر کنید";

					// افزودن کلاس با رنگ قرمز به span
					errorMessageSpan.classList.add("text-danger");

					return false;
				}
			}
			return true;
		}
		function validateKeyPress(event) {
			// کد کلید فشرده شده را دریافت کنید
			var keyCode = event.which || event.keyCode;

			// اگر کد کلید یک عدد نباشد، جلوگیری از ورود کاراکتر
			if (keyCode < 48 || keyCode > 57) {
				event.preventDefault();
			}
		}
	</script>
</body>
<!--end::Body-->
</html>