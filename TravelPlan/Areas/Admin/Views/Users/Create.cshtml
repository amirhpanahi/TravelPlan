@model TravelPlan.Models.Dto.Main.Account.RegisterDto
@{
    ViewData["Title"] = "ایجاد کاربر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br>
<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">ایجاد کاربر</h3>
        <div class="card-toolbar">
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        <text>@ViewBag.Message</text>
                    </div>
                }
                <form action="/Admin/Users/Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group pb-4">
                        <label asp-for="FullName" class="pb-1 SizeLable">نام و نام خانوادگی</label>
                        <input asp-for="FullName" type="text" placeholder="مثال : امیرحسین پناهی" autocomplete="off" class="form-control bg-transparent" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-4">
                        <label asp-for="Email" class="control-label pb-1" style="font-size:16px">ایمیل</label>
                        <input asp-for="Email" type="text" placeholder="Forxampel@gmail.com" autocomplete="off" class="form-control bg-transparent" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-4">
                        <label asp-for="PhoneNumber" class="control-label pb-1" style="font-size:16px">تلفن همراه</label>
                        <input asp-for="PhoneNumber" placeholder="مثال : 09xxxxxxxxx" maxlength="11" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-4">
                        <label asp-for="Password" class="control-label pb-1" style="font-size:16px">کلمه عبور</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-4">
                        <label asp-for="ConfirmPassword" class="control-label pb-1" style="font-size:16px">تکرار کلمه عبور</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="ثبت کاربر" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <div class="card-footer">
        <a href="/admin/users/index" style="font-size:18px">بازگشت به لیست</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}